<api method="GET" version="1.1.0" id="xxx" summary="获取订单信息">
    <path path="/users/{id}/orders">
        <param name="id">用户 ID </param>
        <query name="size">size</query>
        <query name="page" deprecated="0.1.1">page</query>
    </path>

    <tag>g1</tag>
    <tag>g2</tag>
    <server>s1</server>
    <server>s2</server>

    <description>
    description xxx
    </description>

    <request mimetype="json,xml">
        <header name="authorization">token</header>
    </request>

    <response status="200" mimetype="json,xml" type="object">
        <param name="id" type="number" default="1" summary="id" />
        <param name="sex" type="string" default="male" summary="sex">
            <enum value="male">男性</enum>
            <enum value="female">女性</enum>
        </param>
        <param name="emails" type="string" array="true" />
        <header name="WWW-authoricate">xxx</header>
        <example mimetype="json">
        <![CDATA[
        {
            id: 1,
            sex: male,
            emaials: [xx@xx.com]
        }
        ]]>
        </example>
    </response>

    <response status="400" mimetype="json/xml">
    </response>

    <callback method="post" schema="https">
        <request mimetype="json" type="object">
            <query name="size">size</query>

            <param name="id" type="number" default="1" />
            <param name="age" type="number" />
            <example mimetype="json">
            <![CDATA[
            {
                id:1,
                sex: male,
            }
            ]]>
            </example>
        </request>

        <response status="200" mimetype="text" type="string">
        </response>
    </callback>
</api> 
